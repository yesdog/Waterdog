+            i >>>= 7;
+        }
+        int paddingBytes = 5 - (to.writerIndex() - writerIndex) - 1;
+        if (paddingBytes == 0) {
+            to.writeByte(i);
+        } else {
+            to.writeByte(i | 0x80);
+            while (--paddingBytes > 0) {
+                to.writeByte(0x80);
+            }
+            to.writeByte(0);
+        }
+    }
