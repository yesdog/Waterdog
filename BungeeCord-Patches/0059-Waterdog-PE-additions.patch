+        zlib.free();
+        ReferenceCountUtil.safeRelease(outBuffer);
+        ReferenceCountUtil.safeRelease(inBuffer);
+        ReferenceCountUtil.safeRelease(headerTmp);
+        ReferenceCountUtil.safeRelease(outTmp);
+        ReferenceCountUtil.safeRelease(inTmp);
+    }
