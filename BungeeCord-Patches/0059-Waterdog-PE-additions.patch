+    public void write(ByteBuf buf) {
+        buf.writeByte(status);
+        if (packs == null) {
+            buf.writeShortLE(0);
+        } else {
+            buf.writeShortLE(packs.length);
+            for (String pack : packs) {
+                writeString(pack, buf);
+            }
+        }
+    }
+
+    @Override
+    public void handle(AbstractPacketHandler handler) throws Exception {
