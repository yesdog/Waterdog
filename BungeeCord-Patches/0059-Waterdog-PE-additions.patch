+                            act.accept(SK_VI_DATA); //skin data
+                            act.accept(SK_VI_DATA); //cape data
+                            act.accept(SK_VI_DATA); //geom name
+                            act.accept(SK_VI_DATA); //geom data
+                        }
+                        act.accept(SK_VI_DATA); //xuid
+                        act.accept(SK_VI_DATA); //channel
