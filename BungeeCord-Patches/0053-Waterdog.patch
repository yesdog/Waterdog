+        buf.readFloatLE(); //x
+        buf.readFloatLE(); //y
+        buf.readFloatLE(); //z
+        buf.readFloatLE(); //yaw
+        buf.readFloatLE(); //pitch
+        readSVarInt(buf); //seed
