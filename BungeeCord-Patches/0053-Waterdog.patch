+        readSVarInt(buf); //world type (1 - infinite)
+        readSVarInt(buf); // world gamemode (SURVIVAL)
+        setDifficulty((short) readSVarInt(buf));
+        tailPayload = new byte[buf.readableBytes()];
+        buf.readBytes(tailPayload);
+    }
+
