+        writeSVarInt(buf, 1); //world type (1 - infinite)
+        writeSVarInt(buf, 0); //world gamemode
+        writeSVarInt(buf, getDifficulty()); //world difficulty
+        buf.writeBytes(tailPayload);
+    }
+}
