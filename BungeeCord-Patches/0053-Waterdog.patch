+            case ACTION_BAR: return CHAT_CLIENT_TIP_TYPE;
+            case SYSTEM: return CHAT_CLIENT_SYSTEM_TYPE;
+            default:
+                return direction == ProtocolConstants.Direction.TO_SERVER ?
+                        CHAT_CLIENT_CHAT_TYPE : CHAT_CLIENT_RAW_TYPE;
+        }
+    }
